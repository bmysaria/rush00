<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Rush00.App.Views.HabitCreateView">
    <StackPanel>
        <TextBox Watermark="Set a habit to track:"
                 Text="{Binding Title}" />
        <TextBox Watermark="What would be a motivation:"
                 Text="{Binding Motivation}" />
        <TextBox Watermark="When will you start:"
                 Text="{Binding Date}" />
        <TextBox Watermark="How many days do you want to challenge yourself for:"
                 Text="{Binding Days}" />
        <Button Content="Start habit"
                Command="{Binding StartHabit}" />
    </StackPanel>
</UserControl>
