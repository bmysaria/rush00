<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Rush00.App.Views.HabitCreateView">
    <StackPanel>
        <Label Content="Set a habit to track:"/>
        <TextBox Text="{Binding Title}"/>
        <Label Content="What would be a motivation:"/>
        <TextBox Text="{Binding Motivation}"/>
        <Label Content="When will you start:"/>
        <TextBox Text="{Binding Date}" />
        <Label Content="How many days do you want to challenge yourself for:"/>
        <TextBox Text="{Binding Days}" />
        <Button Content="Start habit"
                Command="{Binding StartHabit}" />
    </StackPanel>
</UserControl>
